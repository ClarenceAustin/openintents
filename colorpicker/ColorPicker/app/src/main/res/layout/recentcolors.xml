<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/background"
    android:gravity="center"
    >

	<TextView
	     android:text="@string/recent_colors_expanded"
	     android:layout_width="fill_parent"  
	     android:layout_height="wrap_content"  
	     android:paddingTop="2dip"  
	     android:paddingBottom="2dip"  
	     android:paddingLeft="5dip"  
	     style="?android:attr/listSeparatorTextViewStyle" />  

	<GridView android:id="@android:id/list"
	    android:padding="2px"
	    android:cacheColorHint="@null"
	    android:background="@null"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_weight="1"
	    android:verticalSpacing="5sp"
	    android:horizontalSpacing="5sp"
	    android:numColumns="auto_fit"
	    android:columnWidth="48sp"
	    android:stretchMode="columnWidth"
	    android:gravity="center"
	    />
	    
	<TextView
		android:id="@+id/empty_gridview_text"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:gravity="center"
		android:text="@string/recent_colors_empty"/>
	    
    <Button
	     android:id="@+id/button_clear_history"
	     android:layout_width="fill_parent"  
	     android:layout_height="wrap_content"
	     android:text="@string/recent_colors_clear_history"/>

</LinearLayout>
